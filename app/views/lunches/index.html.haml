- @lunches_by_date.each do |date, lunches|
  .day.row-fluid{:class => date == @lunches_by_date.keys.first ? 'first_day' : ''}
    .date.span2{:id => "#{date.to_s}"}
      %p.calendar
        %span.wday
          = date.wday_fi.upcase
        = date.mday
        %span.month
          = date.month_fi
    .restaurants.span10
      - lunches.each_slice(3) do |row_of_lunches|
        .row-fluid.restaurant_row
          - row_of_lunches.each do |lunch|
            = render(lunch)
